@model FoodListbyRestaurantIdMainModel

@if (Model.foodListByRestaurantId.Count() > 0)
{
    var itemList = Model.foodListByRestaurantId.Where(x => x.IsTiffin == false).ToList();
    var i = 0;
    if (itemList.Count() > 0)
    {
        <div class="section-header">
            <h2>Our Food</h2>
        </div>
        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">

            <div class="tab-pane fade active show" id="menu-vegetarian" style="background-color:#fff;padding-bottom:50px;">

                <div class="row gy-5">


                    @foreach (var item in itemList)
                    {
                        var Id = @item.FoodID;
                        var Image = "/Images/Food/" + @item.ImageName;

                        <div class="col-lg-4 menu-item" style="max-height:300px">
                            
                            <a href="/food-detail/@item.FoodID" class="">
                                @if (item.IsTrusted)
                                {
                                    <div style="position:absolute;float:right">
                                        <div class="product-card__badges">
                                            <div class="tag-badge tag-badge--sale">Trusted</div>
                                        </div>
                                    </div>
                                }
                                <img src="@Image" class="menu-img img-fluid" alt="@item.FoodName" style="height:70%;border:1px solid black;width:300px">
                            </a>
                            <h4>@item.FoodName</h4>
                            <p class="ingredients">
                                @item.Ingredient
                            </p>
                            <div class="row">
                                <div class="col-md-5 price" style="margin-bottom:5px;text-align-last:right">
                                    $@item.Price
                                </div>

                                <div class="col-md-6 rating_@Id faPrimaryColor" style="font-size:30px;color:#ffe339;font-size:25px">
                                    <input type="text" id="ProspectRating_@Id" Name="ProspectRating_@Id" Class="form-control field-input hidden" value="@item.Rate" />
                                </div>
                                <script>
                                    $(".rating_@Id").rate();
                                    var options = {
                                        initial_value: @item.Rate,
                                        readonly: true,
                                        change_once: true,
                                    }
                                    //$("#ProspectRating_@Id").val();
                                    $(".rating_@Id").rate(options);
                                    $(".rating_@Id").rate("setValue", $("#ProspectRating_@Id").val());
                                    $(".rating_@Id").rate("destroy");
                                </script>
                            </div>
                        </div>
                        i = i + 1;
                        <!-- Menu Item -->
                    }

                </div>
            </div><!-- End Starter Menu Content -->

        </div>
    }

    var itemList1 = Model.foodListByRestaurantId.Where(x => x.IsTiffin == true).ToList();
    if (itemList1.Count() > 0)
    {
        <div class="section-header">
            <h2>Our Tiffin</h2>
        </div>
        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">

            <div class="tab-pane fade active show" id="menu-vegetarian" style="background-color:#fff;padding-bottom:50px;">

                <div class="row gy-5">

                    @foreach (var item in itemList1)
                    {
                        var Id = @item.FoodID;
                        var Image = "/Images/Food/" + @item.ImageName;

                        <div class="col-lg-4 menu-item" style="max-height:300px">
                            <a href="/food-detail/@item.FoodID" class="">
                                @if (item.IsTrusted)
                                {
                                    <div style="position:absolute;float:right">
                                        <div class="product-card__badges">
                                            <div class="tag-badge tag-badge--sale">Trusted</div>
                                        </div>
                                    </div>
                                }
                                <img src="@Image" class="menu-img img-fluid" alt="@item.FoodName" style="height:70%;border:1px solid black;width:300px">
                            </a>
                            <h4>@item.FoodName</h4>
                            <p class="ingredients">
                                @item.Ingredient
                            </p>
                            <div class="row">
                                <div class="col-md-5 price" style="margin-bottom:5px;text-align-last:right">
                                    $@item.Price
                                </div>
                                <div class="col-md-6 rating_@Id faPrimaryColor" style="font-size:30px;color:#ffe339;font-size:25px">
                                    <input type="text" id="ProspectRating_@Id" Name="ProspectRating_@Id" Class="form-control field-input hidden" value="@item.Rate" />
                                </div>
                                <script>
                                    $(".rating_@Id").rate();
                                    var options = {
                                        initial_value: @item.Rate,
                                        readonly: true,
                                        change_once: true,
                                    }
                                    //$("#ProspectRating_@Id").val();
                                    $(".rating_@Id").rate(options);
                                    $(".rating_@Id").rate("setValue", $("#ProspectRating_@Id").val());
                                    $(".rating_@Id").rate("destroy");
                                </script>
                            </div>
                        </div>
                        <!-- Menu Item -->
                    }
                </div>
            </div><!-- End Starter Menu Content -->




        </div>

    }

}